<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    
    <% if logged_in? %>
      <div class=icon-container>
        <%= link_to notified_notifications_path do %>
          <span class="fa-stack">
            <% if unchecked_notifications.any? %>
              <i class="far fa-bell fa-stack-2x bell-icon" style="font-size: 0.8em"></i>
              <i class="fas fa-circle n-circle fa-stack-1x notification-icon"></i>
            <% else %>
              <i class="far fa-bell fa-stack-2x bell-icon" style="font-size: 0.8em"></i>
            <% end %>
          </span>
          <% end %>
      </div>
    <% end %>
    
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to site_name, root_path, id: "logo" %>
    </div>
    <nav>
      <ul class="nav navbar-nav navbar-right navbar-collapse collapse" id="navbar">
        <li><%= link_to "Home", root_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Feed", microposts_path %></li>
          <li><%= link_to "Users", users_path %></li>
        <% end %>
        <li><%= link_to "Help", "https://alfnet.info/contact", target: :_blank, rel: "noopener noreferrer" %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Activity", activity_notifications_path %></li>
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>