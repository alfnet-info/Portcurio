<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'microposts/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= render 'microposts/feed' %>
