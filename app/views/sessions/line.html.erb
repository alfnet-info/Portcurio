<% provide(:title, "Line connection") %>
<h1>Line connection</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_with(url: line_path, scope: :session, local: true) do |f| %>
      <%= hidden_field_tag :linkToken, params[:linkToken] %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <!--メール認証をしないので非表示-->
      <!--link_to "(forgot password)", new_password_reset_path %>-->
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>