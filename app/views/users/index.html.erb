<% provide(:title, @title) %>

<h1><%= @title %></h1>
<div class='user_search_form'>
  <%= search_form_for @q, url: users_path do |f| %>
    <%= f.search_field :name_cont, placeholder: "ユーザーを検索" %>
    <%= f.submit '検索', class: 'btn btn-info' %>
  <% end %>
</div>
<div class='center'><%= paginate @users %></div>
<div class='users_container'>
  <ul class="users">
    <%= render @users %>
  </ul>
</div>
<div class='center'><%= paginate @users %></div>
<% if @users.empty? %>
  <p>
    Couldn't find any user.<br>
    Please check username you are looking for.
  </p>
<% end %>
