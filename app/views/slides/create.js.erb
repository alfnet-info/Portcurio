$(".slide_post_modal").html("")

$(".micropost_form").html("<%= escape_javascript(render partial: 'microposts/micropost_form') %>")

<% @micropost.file_type ? description = @micropost.file_type : description = "選択されていません" %>

<% if @micropost.file_type %>
  <% description = @micropost.file_type %>
  $(".slide_post > .file_type").html('<%= description %> <%= link_to microposts_slides_path, remote: true, class: "btn-link", method: :delete do %><i class="far fa-times-circle"></i><% end %>')
<% else %>
  <% description = "選択されていません" %>
  $(".slide_post > .file_type").html("<%= description %>)
<% end %>